{
  "name": "TIL",
  "scopeName": "source.til",
  "fileTypes": ["til"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#attributes" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#constants" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.til",
          "match": "#(?!\\[).*$"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.til",
          "match": "#\\[[^\\]]*\\]",
          "captures": {
            "0": { "name": "entity.other.attribute-name.til" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.til",
          "match": "\\b(if|else|elif|for|while|loop|match|in|return|break|continue)\\b"
        },
        {
          "name": "keyword.declaration.til",
          "match": "\\b(fn|let|var|const|mut|struct|enum|impl|trait|type|pub)\\b"
        },
        {
          "name": "keyword.operator.logical.til",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "variable.language.self.til",
          "match": "\\b(self)\\b"
        },
        {
          "name": "keyword.other.til",
          "match": "\\b(as|import|from)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.til",
          "match": "\\b(int|float|str|bool|char|void|i8|i16|i32|i64|u8|u16|u32|u64|f32|f64)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.til",
          "match": "\\b(true|false|True|False)\\b"
        },
        {
          "name": "constant.language.none.til",
          "match": "\\b(None)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.til",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.til",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.til",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.til",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.til",
          "match": "\\b0[xX][0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.til",
          "match": "\\b0[bB][01_]+\\b"
        },
        {
          "name": "constant.numeric.octal.til",
          "match": "\\b0[oO][0-7_]+\\b"
        },
        {
          "name": "constant.numeric.float.til",
          "match": "\\b[0-9][0-9_]*\\.[0-9_]+([eE][+-]?[0-9_]+)?\\b"
        },
        {
          "name": "constant.numeric.integer.til",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.til",
          "match": "->|=>"
        },
        {
          "name": "keyword.operator.comparison.til",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.til",
          "match": "\\+=|-=|\\*=|/=|="
        },
        {
          "name": "keyword.operator.arithmetic.til",
          "match": "\\*\\*|\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.range.til",
          "match": "\\.\\.\\.|\\.\\."
        },
        {
          "name": "keyword.operator.bitwise.til",
          "match": "&|\\||\\^|~|<<|>>"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.til",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "support.function.builtin.til",
          "match": "\\b(print|input|sqrt|abs|pow|sin|cos|tan|log|exp|floor|ceil|round|min|max|len)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.type.til",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
